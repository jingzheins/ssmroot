<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssmroot.mapper.UserMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.ssmroot.pojo.User">
		<id column="id" property="id" />
		<result column="usersession" property="usersession" />
		<result column="username" property="username" />
		<result column="createtime" property="createtime" />
	</resultMap>
	<insert id="add" parameterType="User" >
            insert into User ( name ) values (#{name})
        </insert>

	<delete id="delete" parameterType="User" >
            delete from User where id= #{id}
        </delete>

	<select id="get" parameterType="User" resultType="User">
            select * from   User  where id= #{id}
        </select>

	<update id="update" parameterType="User" >
            update User set usersession=#{usersession},username=#{username} where id=#{id}
        </update>
	<select id="list" resultType="User">
            select * from   User
        </select>

</mapper>
